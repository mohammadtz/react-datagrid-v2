{
  "compilerOptions": {
    "outDir": ".",
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "declaration": true,
    "sourceMap": false,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": ["src/index.d.ts", "node_modules/@types"],
    "strict": true
  },
  "include": ["./src/**/*.tsx", "./src/**/*.ts", "src/index.d.ts"],
  "exclude": ["node_modules"]
}
